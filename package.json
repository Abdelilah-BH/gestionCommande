{
  "name": "gestioncommande",
  "version": "1.0.0",
  "description": "gestion des commandes de la librairie",
  "main": "index.js",
  "scripts": {
    "tsc": "tsc --noEmit",
    "typeorm": "node --require ./node_modules/typeorm/cli.js",
    "tsc:watch": "tsc --noEmit -w",
    "lint": "node_modules/.bin/ls-lint && eslint src/**/* --ext .ts",
    "lint:fix": "eslint src/**/* --ext .ts --fix",
    "prettier:watch": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier:format": "prettier --config .prettierrc \"src/**/*.ts\" --write",
    "test": "yarn lint && yarn prettier:format && yarn tsc",
    "build": "yarn test && rimraf ./dist && babel src --out-dir dist --extensions \".ts\" --source-maps --copy-files ./src",
    "serve": "set NODE_ENV=production && node dist/index",
    "dev": "nodemon -e ts --exec babel-node src/index.ts --extensions \".ts\"",
    "start": "yarn build && yarn serve",
    "postinstall": "husky install"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/node": "^7.14.7",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-decorators": "^7.14.5",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@faker-js/faker": "^6.0.0-alpha.5",
    "@ls-lint/ls-lint": "^1.9.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-transform-typescript-metadata": "^0.3.2",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.2",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "express-validator": "^6.14.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "typeorm": "^0.2.41"
  }
}
